
<h1>Here are all of your CannaPharm prescriptions</h1>
<form method="get" action="/prescriptions/new">
    <button type="submit" value="New Prescription"> Request a Prescription</button> 
</form>
<br>
<form method="get" action="/patients">
    <button type="submit" value="Home"> Home</button> 
</form>

<% @prescriptions.each do |prescription| %>
    Name: <a href="prescriptions/<%= prescription.id%>"><%= prescription.name %></a><br/>
    Description: <%= prescription.description %><br/>
    Number: <% if prescription.id_no == nil %>
    <%= "Custom" %><br>
    <%else%>
    <%= prescription.id_no %><br/>
    <% end %>
    Notes: <%= prescription.notes %><br/>
    Rating: <%= prescription.rating %><br/>

    <br/>
    <br/>
<% end %>


<form method="get" action="/logout">
    <input type="submit" value="Logout">
</form>